@model TrashCollector.Models.RegisterViewModel
@{
                /**/

                ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("User Role", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.RadioButtonFor(m => m.UserRole, "Customer", new { @class = "radio-inline", onclick = "showCustomerFields()" })@Html.Label("Customer")
            @Html.RadioButtonFor(m => m.UserRole, "Employee", new { @class = "radio-inline", onclick = "showEmployeeFields()" })@Html.Label("Employee")
        </div>
    </div>
    <div class=" form-group">
        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "col-md-2 form-control" })
        </div>
    </div>
    <div class=" form-group">
        @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.LastName, new { @class = "col-md-2 form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class=" form-group">
        @Html.LabelFor(m => m.StreetAddress, new { @class = "col-md-2 control-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.StreetAddress, new { @class = "col-md-2 form-control" })
        </div>
    </div>
    <div class=" form-group">
        @Html.LabelFor(m => m.ZipCode, new { @class = "col-md-2 control-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.ZipCode, new { @class = "col-md-2 form-control" })
        </div>
    </div>
    <div class=" form-group">
        @Html.LabelFor(m => m.City, new { @class = "col-md-2 control-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.City, new { @class = "col-md-2 form-control" })
        </div>
    </div>
    <div class=" form-group">
        @Html.LabelFor(m => m.State, new { @class = "col-md-2 control-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.State, new { @class = "col-md-2 form-control" })
        </div>
    </div>
    <div class=" form-group" id="day-block">
        @Html.LabelFor(m => m.PickupDay, new { @class = "col-md-2 control-label" })
        <div class="col-md-8">
            @Html.DropDownListFor(m => m.PickupDay, new SelectList(new List<string> {"Monday", "Tuesday", "Wednesday", "Thursday" ,"Friday" }), new { @class = "col-md-2 form-control", id = "day-textbox" })
        </div>
    </div>
    <div class="form-group" id="zip-assignment-block" style="display: none">
        @Html.Label("Zip Assignment", new { @class = "col-md-2 control-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.ZipAssignment, new { @class = "col-md-2 form-control", id = "zip-assignment-textbox" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

<script>
    function showEmployeeFields() {
        document.getElementById("zip-assignment-block").style.display = "block";
        document.getElementById("day-block").style.display = "none";
        document.getElementById("day-textbox").value = "";

    }
    function showCustomerFields() {
        document.getElementById("zip-assignment-block").style.display = "none";
        document.getElementById("zip-assignment-textbox").value = "";
        document.getElementById("day-block").style.display = "block";
    }
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
