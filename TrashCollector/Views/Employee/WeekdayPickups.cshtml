@using TrashCollector.Models
@model List<Pickup>
@{
    ViewBag.Title = "WeekdayPickups";
}

<h2>WeekdayPickups</h2>

<table>
    <tr>
        <td onclick="changeDay('monday')"><a>Monday</a></td>
        <td onclick="changeDay('tuesday')"><a>Tuesday</a></td>
        <td onclick="changeDay('wednesday')"><a>Wednesday</a></td>
        <td onclick="changeDay('thursday')"><a>Thursday</a></td>
        <td onclick="changeDay('friday')"><a>Friday</a></td>
    </tr>
</table>

<div id="monday-section" class="day-section" style="display: none">
    <h3>Monday Pickups</h3>
    @foreach(Pickup pickup in Model)
    {
        <table>
            @if (pickup.Date.DayOfWeek.ToString() == "Monday")
            {
            <tr>
                <td>@Html.ActionLink(@pickup.User.FirstName + " " + @pickup.User.LastName, "CustomerProfile", new { Id = pickup.User.Id })</td>
                <td> | @pickup.User.StreetAddress,</td>
                <td>@pickup.User.ZipCode</td>
            </tr>
            }
        </table>
    }
</div>

