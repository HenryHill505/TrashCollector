<script>
    function changeDay(day) {
        sections = document.getElementsByClassName("day-section");
        for (i = 0; i < sections.length; i++) {
            sections[i].style.display = "none";
        }
        section = document.getElementById(day+"-section");
        section.style.display = "block";
    }
</script>

